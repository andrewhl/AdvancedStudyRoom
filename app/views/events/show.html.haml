%h1= @event.name

%h3 Tag phrases

- if @event.tags.empty?
  %p
    No tag phrases defined.
    = link_to "Please set one.", :new_tag
- else
  %ul
    - @event.tags.each do |tag|
      %li= tag.phrase


- if @event.tiers.empty?
  %p
    This event has no tiers.
    = link_to "Please create one.", manage_event_path(@event)
- else

  %h3 Tiers
  %table.table.table-condensed.table-bordered.table-hover
    %tr
      %th Name
      %th Position
      %th Participants
      %th Ruleset
      %th Tier Settings
      %th Delete Tier

    - @event.tiers.ranked.each do |tier|
      %tr
        %td
          = tier.name
        %td
          = tier.tier_hierarchy_position
        %td
          = tier.player_count
        %td
          - if !tier.ruleset?
            Edit Override Ruleset
          - else
            = link_to "Edit Override Ruleset", edit_tier_ruleset_path(tier.ruleset)
        %td
          = link_to "Edit", edit_tier_path(tier)
        %td
          = link_to "Delete", event_tier_path(@event, tier), :method => :delete

%h3 Divisions by Tier
- @event.tiers.ranked.each do |tier|
  %table.table.table-condensed.table-bordered.table-hover
    %tr
      %th
        Tier
        = tier.name
        Divisions
      %th
        Participants
      %th
        Edit
      %th
        Delete
    - if tier.divisions.empty?
      %tr
        %td{:colspan => 3}
          This tier has no divisions.
          = link_to "Please create them.", manage_event_path(@event)
    - else
      - tier.divisions.ranked.each do |division|
        %tr
          %td
            = tier.name + " " + division.division_index.to_s
          %td
            = division.accounts.count
          %td
            = link_to "Edit", edit_division_path(division)
          %td
            = link_to "Delete", division_path(division), :method => :delete



