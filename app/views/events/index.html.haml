%ul.breadcrumb
  %li
    = link_to "Home", :root
    %span.divider= "/"
  %li.active
    Events

%h1 Events (e.g., League)

%table.table.table-condensed.table-bordered.table-hover
  %tr
    %th Name
    %th Manage Structure
    %th Manage Players
    %th Players
    %th Rulesets
    %th Type
    %th Server

    %th Delete

  - @events.each do |event|
    %tr
      %td
        = event.name
      %td
        = link_to "Manage", event_manage_path(event)
        |
        = link_to "Overview", event_path(event)
      %td
        = link_to "Assign", event_registrations_path(event)
      %td
        = event.player_count ? event.player_count : "0"
      %td
        = event.ruleset ? event.ruleset.name : "No ruleset"
      %td= event.event_type
      %td= event.server.name

      %td= link_to "Delete", event_path(event), :method => :delete